<?xml version="1.0" encoding="UTF-8"?>
<package name="de.zero-24.wcf.antispam.userprofile" xmlns="https://www.woltlab.com" xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://www.woltlab.com/XSD/package.xsd">
	<packageinformation>
		<packagename><![CDATA[Anti-Spam Userprofile]]></packagename>
		<packagename language="de">Anti-Spam Userprofile</packagename>
		<packagedescription>This is an anti-spam plugin that automatically bans users and cleans user profile values with non-ascii chars and from the custom blacklists.</packagedescription>
		<packagedescription language="de"><![CDATA[Dieses Anti-Spam-Plugin sperrt Benutzer und entfernt automatisch nicht-aszianischen Zeichen sowie von einer eigenen blacklist.]]></packagedescription>
		<version>1.0.0</version>
		<date>2019-10-23</date>
		<license>GPL</license>
	</packageinformation>

	<authorinformation>
		<author><![CDATA[Tobias Zulauf]]></author>
		<authorurl><![CDATA[https://forum.joomla.de]]></authorurl>
	</authorinformation>

	<compatibility>
		<api version="2017" />
		<api version="2018" />
	</compatibility>

	<requiredpackages>
		<requiredpackage minversion="3.0.0">com.woltlab.wcf</requiredpackage>
		<requiredpackage minversion="5.0.0">com.woltlab.wbb</requiredpackage>
	</requiredpackages>

	<instructions type="install">
		<instruction type="file" application="wcf">files.tar</instruction>
		<instruction type="option">option.xml</instruction>
		<instruction type="userGroupOption">userGroupOption.xml</instruction>
		<instruction type="eventListener">eventListener.xml</instruction>
		<instruction type="language">languages/*.xml</instruction>
	</instructions>

	<instructions type="update" fromversion="*">
		<instruction type="file" application="wcf">files.tar</instruction>
		<instruction type="option">option.xml</instruction>
		<instruction type="userGroupOption">userGroupOption.xml</instruction>
		<instruction type="eventListener">eventListener.xml</instruction>
		<instruction type="language">languages/*.xml</instruction>
	</instructions>
</package>
